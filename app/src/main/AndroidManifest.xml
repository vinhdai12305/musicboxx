<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MusicBoxApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.musicboxx">

        <!-- Language Activity -->
        <activity
            android:name=".Settings.LanguageActivity"
            android:exported="false" />

        <!-- Notification Activity -->
        <activity
            android:name=".Settings.NotificationActivity"
            android:exported="false" />

        <!-- SETTINGS ACTIVITY LÀ MÀN HÌNH CHÍNH -->
        <activity
            android:name=".Settings.SettingsActivity"
            android:exported="true">

            <!-- Đặt MAIN + LAUNCHER bên trong activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- MainActivity KHÔNG còn là Activity khởi động -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
