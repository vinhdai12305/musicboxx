<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicBox">

        <!-- 1. Activity khởi chạy chính (ĐÃ SỬA LỖI ĐƯỜNG DẪN) -->
        <activity
            android:name="com.aicloudflare.musicbox.playlist.PlaylistActivity"
            android:name=".homescreen.MainActivity2"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aicloudflare.musicbox.playlist.AddSongsActivity"
            android:exported="false" />

        <activity
            android:name="com.aicloudflare.musicbox.PlaylistDetailActivity.PlaylistDetailActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- 2. Khai báo các Activity khác (ĐÃ SỬA LỖI ĐƯỜNG DẪN) -->
        <activity android:name=".homescreen.SettingsActivity" android:exported="false" />
        <activity android:name=".homescreen.FavoritesActivity" android:exported="false" />
        <activity android:name=".homescreen.PlaylistsActivity" android:exported="false" />
        <activity android:name=".homescreen.NotificationActivities" android:exported="false" />
        <activity android:name=".homescreen.LanguageActivities" android:exported="false" />
        <activity
            android:name=".activity.ArtistDetailActivity"
            android:exported="false"
            android:parentActivityName=".homescreen.MainActivity2" />
    </application>

</manifest>
