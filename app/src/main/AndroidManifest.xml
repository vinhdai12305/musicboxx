<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MusicBoxApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicBox">

        <!-- ===== LAUNCHER / HOME ===== -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===== PLAYER ===== -->
        <activity
            android:name=".player.PlaySongActivity"
            android:exported="false" />

        <!-- ===== FAVORITES ===== -->
        <activity
            android:name=".homescreen.FavoritesActivity"
            android:exported="false" />

        <!-- ===== PLAYLIST ===== -->
        <activity
            android:name=".homescreen.PlaylistsActivity"
            android:exported="false" />


        <!-- ===== SETTINGS ===== -->
        <activity
            android:name=".homescreen.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".homescreen.LanguageActivities"
            android:exported="false" />

        <activity
            android:name=".homescreen.NotificationActivities"
            android:exported="false" />


        <!-- ===== ARTIST DETAIL ===== -->
        <activity
            android:name=".activity.ArtistDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>
