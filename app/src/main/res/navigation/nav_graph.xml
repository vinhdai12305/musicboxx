<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- SPLASH -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.finalexam.musicboxx.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- ONBOARDING -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.finalexam.musicboxx.onboarding.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- MAIN / HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.finalexam.musicboxx.home.HomeFragment"
        android:label="Home"/>
</navigation>
