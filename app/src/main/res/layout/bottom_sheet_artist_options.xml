<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <!-- 1. Thanh kéo (Handle) - Áp dụng từ layout của Song -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- 2. Header thông tin nghệ sĩ -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <!-- Ảnh nghệ sĩ (dùng ShapeableImageView để có ảnh tròn) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/artist_image_bottom_sheet"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/artist_image_bottom_sheet"
            android:orientation="vertical">

            <!-- Tên nghệ sĩ -->
            <TextView
                android:id="@+id/artist_name_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Tên Nghệ Sĩ Rất Dài" />

            <!-- Thông tin số album, số bài hát -->
            <TextView
                android:id="@+id/artist_stats_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                tools:text="1 Album  |  5 Songs" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 3. Đường kẻ ngang - Áp dụng từ layout của Song -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1F000000"
        android:layout_marginBottom="8dp"/>

    <!-- 4. Danh sách các tùy chọn - Cấu trúc tương tự layout của Song -->
    <TextView
        android:id="@+id/option_play"
        style="@style/BottomSheetOption"
        android:text="Play"
        app:drawableStartCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/option_play_next"
        style="@style/BottomSheetOption"
        android:text="Play Next"
        app:drawableStartCompat="@android:drawable/ic_media_next" />

    <TextView
        android:id="@+id/option_add_to_queue"
        style="@style/BottomSheetOption"
        android:text="Add to Playing Queue"
        app:drawableStartCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/option_add_to_playlist"
        style="@style/BottomSheetOption"
        android:text="Add to Playlist"
        app:drawableStartCompat="@android:drawable/ic_menu_agenda" />

    <TextView
        android:id="@+id/option_share"
        style="@style/BottomSheetOption"
        android:text="Share"
        app:drawableStartCompat="@android:drawable/ic_menu_share" />

</LinearLayout>
