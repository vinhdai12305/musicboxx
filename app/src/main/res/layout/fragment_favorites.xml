<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_logo"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toTopOf="@id/ivLogo"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShuffle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Shuffle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_shuffle"
            app:iconGravity="textStart"
            android:backgroundTint="#FF8D28"
            app:cornerRadius="30dp"
            android:layout_marginEnd="8dp"

            android:elevation="10dp"
            android:outlineSpotShadowColor="#FF5722"
            android:outlineAmbientShadowColor="#FF5722"
            tools:targetApi="p" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayAll"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Play"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            app:icon="@drawable/ic_play_circle"
            app:iconTint="#FF5722"
            app:iconGravity="textStart"
            android:backgroundTint="#FFE0B2"
            app:cornerRadius="30dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 favorites"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Added"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCount"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCount" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_favorite_song"
        app:layout_constraintTop_toBottomOf="@id/dividerLine"
        app:layout_constraintBottom_toBottomOf="parent"/>/>

</androidx.constraintlayout.widget.ConstraintLayout>