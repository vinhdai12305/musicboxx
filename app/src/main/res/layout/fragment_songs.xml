<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".homescreen.SongsFragment">

    <!-- PHẦN HEADER SẮP XẾP MỚI THÊM VÀO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/song_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#1C1C1C"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="50 songs" />

        <TextView
            android:id="@+id/sort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Ascending"
            android:textColor="#FF8C00"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- KẾT THÚC PHẦN MỚI THÊM VÀO -->


    <!-- RecyclerView để hiển thị danh sách bài hát (Giữ nguyên) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_song_list" />

</LinearLayout>
