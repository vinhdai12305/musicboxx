<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/imgFolderIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_folder_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvFolderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Top 100 Billboards"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/imgFolderIcon"
        app:layout_constraintTop_toTopOf="@id/imgFolderIcon"
        app:layout_constraintEnd_toStartOf="@id/btnMenuFolder"
        app:layout_constraintBottom_toTopOf="@id/tvSongCount"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tvSongCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 Songs"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvFolderName"
        app:layout_constraintEnd_toEndOf="@id/tvFolderName"
        app:layout_constraintTop_toBottomOf="@id/tvFolderName"
        app:layout_constraintBottom_toBottomOf="@id/imgFolderIcon"/>

    <ImageView
        android:id="@+id/btnMenuFolder"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert_black"
        app:tint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>