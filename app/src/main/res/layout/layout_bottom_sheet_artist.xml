<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/bsImgArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bsTvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1 Album  |  5 Songs"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="#F0F0F0" />

    <TextView
        android:id="@+id/optPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:text="Play"
        android:textColor="#000000"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_play" /> <TextView
    android:id="@+id/optPlayNext"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:drawablePadding="16dp"
    android:gravity="center_vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="14dp"
    android:text="Play Next"
    android:textColor="#000000"
    android:textSize="16sp"
    app:drawableStartCompat="@drawable/ic_play_next" /> <TextView
    android:id="@+id/optAddToQueue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:drawablePadding="16dp"
    android:gravity="center_vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="14dp"
    android:text="Add to Playing Queue"
    android:textColor="#000000"
    android:textSize="16sp"
    app:drawableStartCompat="@drawable/ic_queue_music" />

    <TextView
        android:id="@+id/optAddToPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:text="Add to Playlist"
        android:textColor="#000000"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_add_playlist" />

    <TextView
        android:id="@+id/optShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:text="Share"
        android:textColor="#000000"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_share" />

</LinearLayout>