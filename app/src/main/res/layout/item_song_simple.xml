<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <!-- Ảnh bìa bài hát -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/song_album_art_simple"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle"
        tools:src="@drawable/ic_launcher_background" />

    <!-- Tên bài hát và nghệ sĩ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/options_menu_simple"
        android:layout_toEndOf="@id/song_album_art_simple"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title_simple"
            style="@style/ItemTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Không Thời Gian" />

        <TextView
            android:id="@+id/song_artist_simple"
            style="@style/ItemSubtitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Dương Domic" />

    </LinearLayout>

    <!-- Nút 3 chấm (tùy chọn) -->
    <ImageView
        android:id="@+id/options_menu_simple"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Options"
        android:focusable="true"
        android:padding="12dp"
        android:src="@drawable/ic_more_vert" />

</RelativeLayout>
