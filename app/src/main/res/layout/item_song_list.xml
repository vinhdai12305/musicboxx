<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <!-- THUMBNAIL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSongThumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgSongThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>
    </androidx.cardview.widget.CardView>

    <!-- SONG TITLE -->
    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cháº±n Tinh"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/cardSongThumb"
        app:layout_constraintTop_toTopOf="@id/cardSongThumb"
        app:layout_constraintEnd_toStartOf="@id/btnPlaySong"/>

    <!-- SONG ARTIST -->
    <TextView
        android:id="@+id/tvSongArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LYHAN"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvSongTitle"
        app:layout_constraintEnd_toEndOf="@id/tvSongTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"/>

    <!-- PLAY BUTTON -->
    <ImageView
        android:id="@+id/btnPlaySong"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_play_next"
        app:tint="@color/white"
        android:background="@drawable/ic_play_circle"
        android:padding="8dp"
        android:contentDescription="Play song"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/btnMenuSong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- MORE OPTIONS -->
    <ImageView
        android:id="@+id/btnMenuSong"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        app:tint="#808080"
        android:contentDescription="More options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
