<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:paddingTop="48dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_back"
        app:tint="@android:color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_search"
        app:tint="@android:color/black"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/btnMenuTop"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnMenuTop"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@android:drawable/ic_menu_more"
        app:tint="@color/black"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAlbumCover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAlbumNameBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ¢m Linh"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardAlbumCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAlbumInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Albums   |   8 Songs   |   00:28:23 mins"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAlbumNameBig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvAlbumInfo"
        android:layout_marginBottom="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Shuffle"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_shuffle"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_shuffle2"
            android:drawableTint="@color/white"
            android:paddingHorizontal="20dp"
            android:layout_marginEnd="32dp"
            style="?android:attr/borderlessButtonStyle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="Play"
            android:textColor="#FF5722"
            android:background="@drawable/bg_button_play"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_play_next"
            android:drawableTint="#FF5722"
            android:paddingHorizontal="30dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutButtons"/>

    <TextView
        android:id="@+id/tvHeaderSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Songs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHeaderSongs"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderSongs"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderSongs"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>