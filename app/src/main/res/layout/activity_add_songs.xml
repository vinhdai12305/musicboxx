<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER: Back button, Title, Search -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Add Songs"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_search"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvHeaderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHeaderTitle" />

    <!-- TABS SECTION -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle">

        <!-- Tab Recent (Active) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recent"
            android:textColor="@color/primary_orange"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Tab Local -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Local"
            android:textColor="@color/gray_chu_lon"
            android:textSize="16sp" />

        <!-- Tab Favorites -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Favorites"
            android:textColor="@color/gray_chu_lon"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Tab Indicator Lines -->
    <FrameLayout
        android:id="@+id/tabIndicatorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tabContainer">

        <!-- Đường kẻ xám mờ chạy suốt chiều ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_gravity="bottom" />

        <!-- Đường kẻ cam đậm chỉ hiển thị dưới tab Recent (chiếm 1/3 chiều rộng) -->
        <View
            android:layout_height="2dp"
            android:background="@color/primary_orange"
            android:layout_gravity="bottom|start"
            android:layout_marginHorizontal="16dp"
            android:layout_width="100dp" />
        <!-- Note: Trong code thực tế nên set width dynamic hoặc dùng ConstraintLayout để căn chỉnh chuẩn 1/3 -->
    </FrameLayout>

    <!-- Sửa lại phần Indicator để chuẩn 1/3 bằng ConstraintLayout cho chính xác tuyệt đối -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lineWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tabContainer">

        <!-- Line xám nền -->
        <View
            android:id="@+id/grayLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Line cam active -->
        <View
            android:id="@+id/orangeIndicator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/primary_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.33"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"/>
        <!-- Để căn giữa chữ Recent đẹp hơn có thể chỉnh marginStart/End khoảng 20dp -->
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- LIST SONG -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineWrapper"
        tools:listitem="@layout/item_song_add"
        tools:itemCount="6" />

</androidx.constraintlayout.widget.ConstraintLayout>