<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_back"
        app:tint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"> <androidx.cardview.widget.CardView
            android:id="@+id/cvArt"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Phép màu"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvArt" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="feat. Minh Tốc &amp; Lam"
                android:textColor="#505050"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="25"
                android:progressTint="#000000"
                android:thumbTint="#000000"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvArtist" />

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0:25"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/seekBar"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3:15"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/seekBar"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutMainControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrentTime">

                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/bg_play_circle"
                    android:padding="16dp"
                    android:src="@drawable/ic_play_next"
                    app:tint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/btnPrev"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_skip_previous"
                    app:tint="#000000"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/btnPlay"
                    app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                    app:layout_constraintTop_toTopOf="@+id/btnPlay"/>

                <ImageView
                    android:id="@+id/btnNext"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_skip_next"
                    app:tint="#000000"
                    android:layout_marginStart="32dp"
                    app:layout_constraintStart_toEndOf="@+id/btnPlay"
                    app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                    app:layout_constraintTop_toTopOf="@+id/btnPlay"/>

                <ImageView
                    android:id="@+id/btnShuffle"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_shuffle"
                    app:tint="#000000"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnPrev"
                    app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                    app:layout_constraintTop_toTopOf="@+id/btnPlay"/>

                <ImageView
                    android:id="@+id/btnRepeat"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_repeat"
                    app:tint="#000000"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnNext"
                    app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                    app:layout_constraintTop_toTopOf="@+id/btnPlay"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutSubControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutMainControls">

                <ImageView
                    android:id="@+id/btnLoopOne"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_repeat2"
                    app:tint="#000000"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btnTimer"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_time"
                    app:tint="#000000"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btnCrossfade"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_shuffle"
                    app:tint="#000000"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btnMoreOptions"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_more_vert"
                    app:tint="#000000"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnShowLyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutSubControls"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lyrics"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerLyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_lyrics_panel"
                android:padding="24dp"
                android:minHeight="600dp"
                app:layout_constraintTop_toBottomOf="@+id/btnShowLyrics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lyrics"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:layout_marginBottom="24dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLyrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>