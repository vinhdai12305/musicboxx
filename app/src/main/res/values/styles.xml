<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================= -->
    <!-- STYLE DÙNG CHO HOME SCREEN -->
    <!-- ========================= -->

    <!-- Container tiêu đề + See All -->
    <style name="SectionHeaderContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- RecyclerView ngang -->
    <style name="HorizontalRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Text cho tab -->
    <style name="CustomTabStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- ========================= -->
    <!-- STYLE CHO ARTIST / IMAGE -->
    <!-- ========================= -->

    <!-- Image hình tròn -->
    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
